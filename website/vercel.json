{
    "version": 2,
    "builds": [
        {
            "src": "**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/styles.css",
            "headers": {
                "Content-Type": "text/css",
                "Cache-Control": "no-cache, no-store, must-revalidate"
            },
            "dest": "/styles.css"
        },
        {
            "src": "/(.*)",
            "headers": {
                "Cache-Control": "no-cache, no-store, must-revalidate"
            },
            "dest": "/$1"
        }
    ]
} 